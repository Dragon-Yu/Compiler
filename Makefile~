GCC = g++
YACC = bison
LEX = flex

all: 			compiler

yacc.yy.c: 		yacc.yy.y
			$(YACC) -d -o yacc.yy.c yacc.yy.y 

PJ1ll.c: 		PJ1.ll.l
			$(LEX) -o PJ1ll.c PJ1ll.l 

PJ1yy.o:		PJ1yy.c 	PJ1.hpp
			$(GCC) -c -o PJ1yy.o PJ1yy.c 

PJ1ll.o:		PJ1ll.c PJ1.hpp
			$(GCC) -c -o PJ1ll.o PJ1ll.c 

compiler: 		PJ1yy.o PJ1ll.o
			$(GCC) -o PJ1  PJ1*.o  

clean: 
			rm -f *.h *.o *.c compiler
